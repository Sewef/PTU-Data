    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/py/pokesheets",
            "args": "--in-dir ../../ptu/data/pokedex/homebrew/ --abilities ../../ptu/data/abilities/abilities_homebrew.json  --out export.json"
        }
    ]
}