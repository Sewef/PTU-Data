{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "http.server",
      "type": "shell",
      "command": "python -m http.server",
      "problemMatcher": []
    },
    {
      "label": "Copy PTU (robocopy)",
      "type": "shell",
      "command": "robocopy \"C:/GitHub/PTU-Data/ptu\" \"C:/GitHub/sewef.github.io/ptu\" /MIR /R:0 /W:0 & if %ERRORLEVEL% LSS 8 (exit /b 0) else (exit /b %ERRORLEVEL%)",
      "options": {
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/d",
            "/c"
          ]
        }
      },
      "problemMatcher": []
    },
        {
      "label": "Minify Data",
      "type": "shell",
      "command": "python",
      "args": [
        "py/deploy/minify_json.py",
        "ptu/data"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Git Deploy",
      "type": "shell",
      "options": {
        "cwd": "C:/GitHub/sewef.github.io",
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/d",
            "/c"
          ]
        }
      },
      "command": "git add . & git diff --cached --quiet && (echo No changes to commit) || (git commit -m \"PTU Data - Auto Deploy\" & git push)",
      "problemMatcher": []
    },
    {
      "label": "Deploy",
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "dependsOn": [
        "Pokesheets All",
        "Minify Data",
        "Copy PTU (robocopy)",
        "Git Deploy"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Pokesheets All",
      "dependsOn": [
        "Pokesheets Homebrew",
        "Pokesheets Homebrew Moves",
        "Pokesheets Core",
        "Pokesheets Core Moves",
        "Pokesheets Community",
        "Pokesheets Community Moves"
      ],
      "problemMatcher": []
    },
    {
      "label": "Pokesheets Homebrew",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "close": false
      },
      "command": "py py/pokesheets/pokesheets_export.py --tag Homebrew --in-dir ptu/data/pokedex/homebrew/ --out ptu/data/pokesheets/pokedex_homebrew.json --abilities ptu/data/abilities/abilities_homebrew.json",
      "problemMatcher": []
    },
    {
      "label": "Pokesheets Homebrew Moves",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "command": "py py/pokesheets/pokesheets_export_moves.py ptu/data/moves/moves_homebrew.json ptu/data/pokesheets/moves_homebrew.json",
      "problemMatcher": []
    },
    {
      "label": "Pokesheets Core",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "command": "py py/pokesheets/pokesheets_export.py --tag Core --in-dir ptu/data/pokedex/core/ --out ptu/data/pokesheets/pokedex_core.json --abilities ptu/data/abilities/abilities_core.json",
      "problemMatcher": []
    },
    {
      "label": "Pokesheets Core Moves",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "command": "py py/pokesheets/pokesheets_export_moves.py ptu/data/moves/moves_core.json ptu/data/pokesheets/moves_core.json",
      "problemMatcher": []
    },
    {
      "label": "Pokesheets Community",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "command": "py py/pokesheets/pokesheets_export.py --tag Community --in-dir ptu/data/pokedex/community/ --out ptu/data/pokesheets/pokedex_community.json --abilities ptu/data/abilities/abilities_9g.json",
      "problemMatcher": []
    },
    {
      "label": "Pokesheets Community Moves",
      "type": "shell",
      "presentation": {
        "reveal": "silent",
        "close": true
      },
      "command": "py py/pokesheets/pokesheets_export_moves.py ptu/data/moves/moves_9g.json ptu/data/pokesheets/moves_community.json",
      "problemMatcher": []
    }
  ]
}